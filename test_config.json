{
  "test_configuration": {
    "application_url": "http://localhost:8080",
    "test_user": {
      "email": "test@example.com",
      "name": "Test User"
    },
    "oauth_settings": {
      "mock_oauth": true,
      "skip_real_oauth": true,
      "test_authentication": true
    },
    "sidebar_items": [
      {
        "name": "Dashboard",
        "selector": "[data-nav='dashboard']",
        "alt_selectors": [
          "a:has-text('Dashboard')",
          "button:has-text('Dashboard')",
          ".nav-item:has-text('Dashboard')"
        ],
        "expected_content": "dashboard",
        "content_indicators": [
          "[data-section='dashboard']",
          ".dashboard-section",
          "#dashboard-content",
          "h1:has-text('Dashboard')",
          ".dashboard-container"
        ]
      },
      {
        "name": "Asset Library",
        "selector": "[data-nav='asset-library']",
        "alt_selectors": [
          "a:has-text('Asset Library')",
          "button:has-text('Asset')",
          ".nav-item:has-text('Asset')"
        ],
        "expected_content": "asset",
        "content_indicators": [
          "[data-section='asset-library']",
          ".asset-section",
          "#asset-content",
          "h1:has-text('Asset')",
          ".asset-grid"
        ]
      },
      {
        "name": "Sources",
        "selector": "[data-nav='sources']",
        "alt_selectors": [
          "a:has-text('Sources')",
          "button:has-text('Sources')",
          ".nav-item:has-text('Sources')"
        ],
        "expected_content": "source",
        "content_indicators": [
          "[data-section='sources']",
          ".sources-section",
          "#sources-content",
          "h1:has-text('Sources')",
          ".source-grid"
        ]
      },
      {
        "name": "AI Assistant",
        "selector": "[data-nav='ai-assistant']",
        "alt_selectors": [
          "a:has-text('AI Assistant')",
          "button:has-text('AI')",
          ".nav-item:has-text('Assistant')"
        ],
        "expected_content": "assistant",
        "content_indicators": [
          "[data-section='ai-assistant']",
          ".ai-section",
          "#ai-content",
          "h1:has-text('AI')",
          ".chat-container"
        ]
      }
    ],
    "timeouts": {
      "page_load": 30000,
      "element_wait": 10000,
      "network_idle": 5000,
      "oauth_flow": 60000
    },
    "screenshots": {
      "enabled": true,
      "full_page": true,
      "quality": 80,
      "directory": "debug_logs/playwright/screenshots"
    },
    "logging": {
      "console_messages": true,
      "network_requests": true,
      "browser_logs": true,
      "detailed_errors": true
    }
  },
  "error_recovery": {
    "retry_attempts": 3,
    "retry_delay": 2000,
    "continue_on_error": true,
    "capture_error_state": true
  },
  "test_scenarios": {
    "oauth_flow": {
      "test_google_signin": true,
      "test_mock_login": true,
      "test_authentication_state": true,
      "test_user_profile": true
    },
    "sidebar_navigation": {
      "test_visibility": true,
      "test_navigation_items": true,
      "test_content_switching": true,
      "test_toggle_functionality": true,
      "test_persistence": true
    },
    "responsive_design": {
      "test_mobile": false,
      "test_tablet": false,
      "test_desktop": true
    }
  }
}