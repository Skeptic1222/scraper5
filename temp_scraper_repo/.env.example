# Enhanced Media Scraper - Environment Configuration Template
# Copy this file to .env and update with your values

# ====================
# APPLICATION SETTINGS
# ====================

# Flask Configuration
FLASK_ENV=development              # Options: development, production
DEBUG=false                        # Set to true for development
SECRET_KEY=your-secret-key-here   # Generate with: python -c "import secrets; print(secrets.token_hex(32))"

# Server Configuration
HOST=0.0.0.0                      # Bind address
PORT=5000                         # Port number
PUBLIC_BASE_URL=http://localhost  # Your domain (no trailing slash)

# ====================
# DATABASE
# ====================

# Choose one database configuration:

# Option 1: SQLite (Development)
DATABASE_URL=sqlite:///instance/scraper.db

# Option 2: PostgreSQL (Production)
# DATABASE_URL=postgresql://username:password@localhost:5432/scraper_db

# Option 3: MySQL/MariaDB
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/scraper_db

# Option 4: SQL Server
# DATABASE_URL=mssql+pyodbc://username:password@server/database?driver=ODBC+Driver+17+for+SQL+Server

# ====================
# AUTHENTICATION
# ====================

# Google OAuth 2.0 (Required)
# Get from: https://console.cloud.google.com
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URL=http://localhost:5000/login/google/authorized

# Admin Configuration
ADMIN_EMAILS=admin@example.com    # Comma-separated list
LOGIN_REQUIRED=false               # Set to true to require login for all pages

# ====================
# FEATURES
# ====================

# AI Assistant (Optional)
AI_ENABLED=true
AI_MODEL=gpt-3.5-turbo
OPENAI_API_KEY=sk-...             # Your OpenAI API key

# Payment Processing (Optional)
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
PAYPAL_CLIENT_ID=...
PAYPAL_SECRET=...
PAYPAL_MODE=sandbox               # Options: sandbox, live

# ====================
# SECURITY
# ====================

# Session Configuration
SESSION_COOKIE_SECURE=false       # Set to true for HTTPS
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/hour

# ====================
# STORAGE
# ====================

# File Storage
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=104857600      # 100MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,mp4,webm,pdf

# Cloud Storage (Optional)
USE_S3=false
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
AWS_S3_BUCKET=...
AWS_S3_REGION=us-east-1

# ====================
# PERFORMANCE
# ====================

# Database Connection Pool
SQLALCHEMY_POOL_SIZE=10
SQLALCHEMY_POOL_RECYCLE=3600
SQLALCHEMY_MAX_OVERFLOW=20

# Cache Configuration (Optional)
CACHE_TYPE=simple                 # Options: simple, redis, memcached
CACHE_REDIS_URL=redis://localhost:6379/0
CACHE_DEFAULT_TIMEOUT=300

# ====================
# LOGGING
# ====================

# Log Configuration
LOG_LEVEL=INFO                    # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760            # 10MB
LOG_BACKUP_COUNT=5

# ====================
# DEVELOPMENT
# ====================

# OAuth Development Settings
OAUTHLIB_INSECURE_TRANSPORT=1     # Allow HTTP in development (remove in production)
OAUTHLIB_RELAX_TOKEN_SCOPE=1      # Be flexible with OAuth scopes

# Testing
TESTING=false
WTF_CSRF_ENABLED=true             # Set to false only for testing

# ====================
# OPTIONAL SERVICES
# ====================

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=...
MAIL_PASSWORD=...
MAIL_DEFAULT_SENDER=noreply@example.com

# Monitoring (Optional)
SENTRY_DSN=...
PROMETHEUS_ENABLED=false
METRICS_PORT=9090

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=UA-...
MIXPANEL_TOKEN=...