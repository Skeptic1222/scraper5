modules = ["web", "python-3.12", "nodejs-20"]
run = "python app.py"

[nix]
channel = "stable-24_05"
packages = ["cargo", "freetype", "lcms2", "libGL", "libGLU", "libiconv", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "openssl", "pkg-config", "rustc", "tcl", "tk", "unixODBC", "zlib"]

[deployment]
run = ["sh", "-c", "python app.py"]

[workflows]
runButton = "Run Flask App"

[[workflows.workflow]]
name = "Run Flask App"
author = 34253612
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true
